<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="50dp">

        <ImageButton
            android:id="@+id/Voltar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/imgPersonagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/quadrado" />

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do personagem"
            android:textColor="#8FC748"
            android:textSize="22dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txtEspecie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EspÃ©cie"
            android:textColor="#8FC748"
            android:textSize="22dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="#8FC748"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/imgFavoritar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/star"
            android:background="@color/cardview_light_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>