<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="50dp">

        <ImageButton
            android:id="@+id/Voltar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/txtNomeUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do usuÃ¡rio"
            android:textColor="#8FC748"
            android:textSize="22dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#8FC748"
            android:textSize="18dp"/>

        <ImageButton
            android:id="@+id/imgFavoritar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/star"
            android:background="@color/cardview_light_background"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/PersonagemFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/quadrado" />

        <ImageView
            android:id="@+id/EpisodioFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ultimo" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>